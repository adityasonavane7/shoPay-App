<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Authentication.loginActivity"
    android:background="@color/softUiBackground">

    <soup.neumorphism.NeumorphCardView
        android:layout_margin="15dp"
        app:neumorph_backgroundColor="@color/softUiBackground"
        app:neumorph_shadowColorDark="@color/softUiShadow1"
        app:neumorph_shadowColorLight="@color/softUiShadow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Neumorph.CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <soup.neumorphism.NeumorphTextView
                app:neumorph_shadowColorDark="@color/softUiShadow1"
                app:neumorph_shadowColorLight="@color/softUiShadow2"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/themeDarkest"
                android:textSize="50sp"/>
            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/softUiBackground"
                app:neumorph_shadowColorDark="@color/softUiShadow1"
                app:neumorph_shadowColorLight="@color/softUiShadow2">
                <EditText
                    android:hint="Phone Number"
                    android:textColorHint="@color/themeLightest"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/themeDark"
                    android:background="@color/softUiBackground"/>
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphButton
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Send OTP"
                android:textColor="@color/themeDarkest"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="30sp"/>

